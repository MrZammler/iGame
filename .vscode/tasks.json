    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build for 68000",
            "type": "shell",
            "linux": {
							"command": "make",
							"args": [
									"-f",
									"Makefile.docker"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build for 68030",
            "type": "shell",
            "linux": {
							"command": "make",
							"args": [
									"-f",
									"Makefile.docker",
									"iGame.030"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build for 68040",
            "type": "shell",
            "linux": {
							"command": "make",
							"args": [
									"-f",
									"Makefile.docker",
									"iGame.040"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build for 68060",
            "type": "shell",
            "linux": {
							"command": "make",
							"args": [
									"-f",
									"Makefile.docker",
									"iGame.060"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build MorphOS",
            "type": "shell",
            "linux": {
							"command": "make",
							"args": [
									"-f",
									"Makefile.docker",
									"iGame.MOS"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build AmigaOS4",
            "type": "shell",
            "linux": {
                "command": "make",
                "args": [
										"-f",
										"Makefile.docker",
                    "iGame.OS4"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "LHA Pack",
            "type": "shell",
            "linux": {
                "command": "lha",
                "args": [
                    "a",
                    "iGame.lha",
                    "iGame",
                    "iGame.030",
                    "iGame.040",
                    "iGame.060",
                    "iGame.MOS",
                    "iGame.OS4"
                ]
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "linux": {
                "command": "rm",
                "args": [
                    "./iGame",
                    "./iGame.*",
                    "./src/*.o"
                ]
            }
        }
    ]
}
