    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build for 68000",
            "type": "shell",
            "linux": {
                "command": "make",
                "args": [
                        "-f",
                        "Makefile.docker"
                ]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(warning|error) ([0-9]*) in line ([0-9]*) of \"(.*)\": (.*)$",
                    "severity": 1,
                    "line": 3,
                    "file": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
